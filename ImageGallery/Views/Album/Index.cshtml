@model Album
<h1>@Model.Name</h1>

<form method="post" enctype="multipart/form-data" asp-controller="Album" asp-action="Index">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="files" multiple>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload">
        </div>
    </div>
</form>

<section id="photos">
    @foreach (var image in Model.Images)
    {
        <a href="/ImageView/@Model.Id/@image.Id">
            <img class="lazyload zoom" src="/PreRender/@Model.Id/@image.Id" data-src="/Thumbnail/@Model.Id/@image.Id">
        </a>
    }
</section>