@model Album[]
@if (Model.Length == 0)
{
    <div class="center" id="add-album-tutorial">
        <h2>Press</h2>
        <i class="fas fa-plus"></i>
        <h2> to add albums</h2>
    </div>
    <script>let navBarAdd = document.getElementById('add-album-tutorial');
        navBarAdd.addEventListener('click', function () {
            window.location.href += window.location.href.endsWith('/') ? 'Add' : '/Add';
        });</script>
}
else
{
    <div style="padding: 10px">
        <h1>@Model.Length albums</h1>
        @foreach (var album in Model)
        {
            <a href="/Album/@album.Id">
                <h2>@album.Name</h2>
            </a>
            @*TODO: reuse in component? Only if same as in album vie*@
            @foreach (var image in album.Images)
            {
                <a href="/ImageView/@album.Id/@image.Id">
                    <img class="lazyload zoom" src="/PreRender/@image.Width/@image.Height" data-src="/Thumbnail/@album.Id/@image.Id" width="@image.Width" height="@image.Height">
                </a>
            }
        }
    </div>
}

