<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar">
        <span class="navbar-title">
            @ViewData["Title"]
        </span>
        <a href="/" class="logo">
            <img src="/logo.png" width="127" height="26" alt="DIPS Photos">
        </a>
        @if (ViewData["ShowAdd"] is bool)
        {
            <span class="navbar-add" id="js-navbar-add">
                <i class="fas fa-plus"></i>
            </span>
        }

        <span class="navbar-toggle" id="js-navbar-toggle">
            <i class="fas fa-bars"></i>
        </span>
        <ul class="main-nav" id="js-menu">
            <li>
                <a href="#" class="nav-links">Home</a>
            </li>
            <li>
                <a href="#" class="nav-links">Products</a>
            </li>
            <li>
                <a href="#" class="nav-links">About Us</a>
            </li>
            <li>
                <a href="#" class="nav-links">Contact Us</a>
            </li>
            <li>
                <a href="#" class="nav-links">Blog</a>
            </li>
        </ul>
    </nav>
    @RenderBody()
    <script src="~/js/lazysizes.min.js" async=""></script>
    <script>let mainNav = document.getElementById('js-menu');
        let navBarToggle = document.getElementById('js-navbar-toggle');
        navBarToggle.addEventListener('click', function () {
            mainNav.classList.toggle('active');
        });</script>
    @if (ViewData["ShowAdd"] is bool)
    {
        <script>let navBarAdd = document.getElementById('js-navbar-add');
            navBarAdd.addEventListener('click', function () {
                window.location.href += window.location.href.endsWith('/') ? 'Add' : '/Add';
            });</script>
    }

</body>
</html>